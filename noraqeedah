<script>
  // إعداد بيانات الدروس
  const playlistLink = "https://youtube.com/playlist?list=PLXS0usquloW-8tdwpZRydcqnj7_c4NW-f&si=apRVl9EtCgLVqEGs";
  const lessons = [
    {title:"الدرس 1: مقدمة في العقيدة وأهميتها", desc:"تعريف العقيدة وأهميتها كقاعدة للدين."},
    {title:"الدرس 2: الإيمان بالله – توحيد الربوبية", desc:"بيان أن الله وحده الخالق والرازق والمدبر."},
    {title:"الدرس 3: الإيمان بالله – توحيد الألوهية", desc:"إفراد الله بالعبادة ومعنى لا إله إلا الله."},
    {title:"الدرس 4: الأسماء والصفات", desc:"منهج أهل السنة في إثبات الأسماء والصفات."},
    {title:"الدرس 5: الإيمان بالملائكة", desc:"تعريف الملائكة وصفاتهم وأعمالهم."},
    {title:"الدرس 6: الإيمان بالكتب", desc:"الإيمان بالكتب المنزلّة وموقف أهل السنة من التحريف."},
    {title:"الدرس 7: الإيمان بالرسل", desc:"مكانة الرسل وخصائصهم والرد على الغلو."},
    {title:"الدرس 8: القبر وما بعده", desc:"أول منازل الآخرة ونعيم القبر وعذابه."},
    {title:"الدرس 9: البعث والحساب", desc:"البعث والميزان والصراط والحساب."},
    {title:"الدرس 10: الجنة والنار", desc:"صفات الجنة والنار وأثرها في العمل."},
    {title:"الدرس 11: مراتب القدر الأربع", desc:"العلم والكتابة والمشيئة والخلق."},
    {title:"الدرس 12: الرد على القدرية والجبرية", desc:"وسطية أهل السنة بين الجبر والاختيار."},
    {title:"الدرس 13: منهج أهل السنة في الجماعة", desc:"معنى الجماعة والسمع والطاعة وضوابطها."},
    {title:"الدرس 14: منهج أهل السنة في الصحابة", desc:"فضل الصحابة وموقف أهل السنة من الخلاف."},
    {title:"الدرس 15: الإيمان قول وعمل", desc:"تعريف الإيمان وزيادته ونقصانه."},
    {title:"الدرس 16: الولاء والبراء وخاتمة", desc:"ضوابط الولاء والبراء وخلاصة الدورة."}
  ];

  // إدراج الدروس في الصفحة
  const lessonsContainer = document.getElementById('lessonsContainer');
  const lessonList = document.getElementById('lessonList');
  lessons.forEach((ls, idx) => {
    const div = document.createElement('div');
    div.className = 'lesson';
    div.innerHTML = `
      <h3>${ls.title}</h3>
      <p>${ls.desc}</p>
      <div style="display:flex;gap:8px;flex-wrap:wrap">
        <a class="btn btn-primary" href="${playlistLink}" target="_blank" rel="noopener">مشاهدة الدرس</a>
        <a class="btn btn-ghost" href="${playlistLink}" target="_blank" rel="noopener">مذكرة الدرس (PDF)</a>
      </div>
    `;
    lessonsContainer.appendChild(div);

    const li = document.createElement('li');
    li.textContent = ls.title;
    lessonList.appendChild(li);
  });

  // تقدم افتراضي وحفظ محلي
  const progressBar = document.getElementById('progressBar');
  const progressText = document.getElementById('progressText');
  const total = lessons.length;
  // استرجاع التقدم من التخزين المحلي
  const completed = JSON.parse(localStorage.getItem('completedLessons') || '[]');
  function updateProgress(){
    const done = completed.length;
    const pct = Math.round((done/total)*100);
    progressBar.style.width = pct + '%';
    progressText.textContent = `${done} من ${total} درس`;
  }
  updateProgress();

  // توليد الشهادة وطباعة
  const nameInput = document.getElementById('studentName');
  const courseInput = document.getElementById('courseName');
  const dateInput = document.getElementById('dateField');
  const generateBtn = document.getElementById('generateBtn');
  const printBtn = document.getElementById('printBtn');
  const certName = document.getElementById('certName');
  const certCourse = document.getElementById('certCourse');

  generateBtn.addEventListener('click', () => {
    const name = nameInput.value.trim() || 'اسم الطالب / الطالبة';
    const course = courseInput.value.trim() || 'شرح عقيدة أهل السنة والجماعة – لابن عثيمين';
    const date = dateInput.value.trim() || new Date().toLocaleDateString('ar-SA');
    certName.textContent = name;
    certCourse.textContent = course;
    // إضافة التاريخ إن لم يكن موجوداً
    let existingDate = document.getElementById('certDate');
    if (!existingDate) {
      const d = document.createElement('div');
      d.id = 'certDate';
      d.style.textAlign = 'center';
      d.style.marginTop = '10px';
      d.style.color = '#374151';
      d.style.fontSize = '0.95rem';
      d.textContent = 'التاريخ: ' + date;
      document.getElementById('certificate').insertBefore(d, document.querySelector('.cert-meta').nextSibling);
    } else {
      existingDate.textContent = 'التاريخ: ' + date;
    }
    window.scrollTo({ top: 0, behavior: 'smooth' });
  });

  printBtn.addEventListener('click', () => window.print());

  // حفظ تقدم تجريبي: عند النقر على عنوان الدرس في الشريط الجانبي يتم وسمه كمكتمل
  lessonList.addEventListener('click', (e) => {
    if (e.target.tagName.toLowerCase() === 'li') {
      const idx = Array.from(lessonList.children).indexOf(e.target);
      const id = `lesson-${idx}`;
      const pos = completed.indexOf(id);
      if (pos === -1) completed.push(id);
      else completed.splice(pos,1);
      localStorage.setItem('completedLessons', JSON.stringify(completed));
      // تمييز العناصر المكتملة بصريًا
      Array.from(lessonList.children).forEach((li, i) => {
        const key = `lesson-${i}`;
        li.style.opacity = completed.includes(key) ? '0.6' : '1';
        li.style.textDecoration = completed.includes(key) ? 'line-through' : 'none';
      });
      updateProgress();
    }
  });

  // تهيئة حالة الشريط الجانبي من التخزين
  Array.from(lessonList.children).forEach((li, i) => {
    const key = `lesson-${i}`;
    if (completed.includes(key)) {
      li.style.opacity = '0.6';
      li.style.textDecoration = 'line-through';
    }
  });

</script>

</body>
</html>
